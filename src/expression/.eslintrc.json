{
	"env": {
		"browser": false
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "script"
	},
	"rules": {
		"indent": [ 0, "tab", { "ignoreComments": true } ],
		"linebreak-style": [ 2, "unix" ],
		"quotes": [ 0, "single" ],
		"semi": [ 2, "always" ],
		"no-var": [2],
		"no-unused-vars": [ 2, { "vars": "all", "args": "after-used" } ],
		"no-console": [ 2 ],
		"require-atomic-updates": [ 0 ]
	},
	"globals": {
		"time": true,

		"thisLayer": true,
		"thisComp": true
	}
}